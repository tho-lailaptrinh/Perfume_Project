                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
               ...
            </td>
            <td>
                    @Html.ActionLink("Buy", "Edit", new { /* id=item.PrimaryKey */}, new {@class = "btn btn-warning" })
