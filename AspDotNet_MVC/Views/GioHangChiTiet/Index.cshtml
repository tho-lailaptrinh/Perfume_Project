@model IEnumerable<AspDotNet_MVC.Models.Entitis.GioHangChiTiet>
@inject AspDotNet_MVC.IRepositorys.ISanPhamRepo _sp;
@inject AspDotNet_MVC.IRepositorys.IUserRepo _ur;

@{
    ViewData["Title"] = "Index";
}

<h3>Giỏ hàng chi tiết</h3>

<table class="table">
    <thead>
        <tr>
           @*  <th>
                @Html.DisplayNameFor(model => model.Id)
            </th> *@
            <th>
                Img Product
            </th>
            <th>
                Name Product
            </th>
            <th>
                Price Product
            </th>
            <th>
               Amount
            </th>
            <th>
                Money
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            decimal total = 0;
        }
        @foreach (var item in Model) {
                <tr>
                   @*  <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td> *@
                    <td>
                        @foreach (var sp in await _sp.GetSanPhams())
                        {
                            @if (sp.Id == item.IdSP)
                            {
                                <img src="~/logo/@sp.ImgFile" class="img-fluid" width="60px" />
                            }
                        }
                    </td>
                    <td>
                        @foreach (var sp in await _sp.GetSanPhams())
                        {
                            @if (sp.Id == item.IdSP)
                                @sp.Ten;
                        }
                    </td>
                    <td>
                        @foreach (var sp in await _sp.GetSanPhams())
                        {
                            @if (sp.Id == item.IdSP)
                                @sp.Gia
                            ;
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Money)
                    </td>
                    <td>
                            @Html.ActionLink("Buy", "Buy", new { id=item.IdSP}, new {@class = "btn btn-warning" })
                            @Html.ActionLink("Delete", "Delete", new {  id=item.Id }, new { @class = "btn btn-danger" })
                    </td>
            </tr>
            total += Convert.ToDecimal(item.Amount) * Convert.ToDecimal(item.SanPhams.Gia);

        }

    </tbody>
</table>    
<div>
    <h4>Tổng tiền thanh toán:  <u> @total.ToString("N0") VNĐ</u> </h4>
</div>
<div class=" float-end">
    <a asp-action="ThanhToan" class="btn btn-danger">Thanh Toán</a>
    <a asp-action="ViewHoaDon" class="btn btn-success">Hoá đơn</a>
</div>

