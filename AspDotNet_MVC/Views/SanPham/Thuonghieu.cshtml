@model IEnumerable<AspDotNet_MVC.Models.Entitis.SanPham>
@{
    ViewData["Title"] = "Thuonghieu";
}
<div>
    <div class="d-flex justify-content-center pt-4">
        <div>
            <h1 class="textcolor">Top Perfume</h1>
        </div>
    </div>
    <div class="d-flex justify-content-center ">
        <ul class="">
            <a class="text-decoration-none p-2 text-dark">TẤT CẢ</a>
            <strong> / </strong>
            <a class="text-decoration-none p-2 textcolor">HÀNG MỚI</a>
            <strong> / </strong>
            <a class="text-decoration-none p-2 text-dark">BÁN CHẠY</a>
            <strong> / </strong>
            <a class="text-decoration-none p-2 text-dark">NỔI BẬT</a>
        </ul>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-3">
                <div class="bg-white rounded-2">
                    <div class="position-relative">
                        <img src="~/logo/@item.ImgFile" class="img-fluid">
                        <div class="navbar-nav position-absolute top-0 end-0">
                            <i class="fa-solid fa-heart text-danger fa-xl pt-4 pe-2"></i>
                            <i class="fa-solid fa-cart-shopping text-secondary fa-xl pt-5 pe-2" typeof="button" data-bs-toggle="modal" data-bs-target="#createModal"></i>
                            <div class="modal" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="createModalLabel">Add To Cart</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form method="post" action="@Url.Action("AddToCart", "SanPham")">
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <div class="form-group">
                                                        <input type="text" name="amount" id="amount" class="form-control" placeholder="Amount Product Add To Cart" />
                                                    </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                    <input type="submit" value="Add to Cart" class="btn btn-warning" />
                                                </div>
                                            </form>
                                        </div>
                                       
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="position-absolute rounded-pill top-0 start-0 p-2">
                            <div class="w-100 bg-danger text-white bogocgiamgia">NEW</div>
                        </div>
                    </div>
                    <div>
                        <div>
                            <p class="text-center">@item.Ten</p>
                        </div>
                        <div class="d-flex justify-content-center">
                            <span>
                                <strong class="text-danger px-3">@item.Gia</strong>
                            </span>
                            <span class="text-secondary">
                                <del>830.000đ</del>
                            </span>
                        </div>
                        <div class="row d-flex justify-content-between">
                            <div class="col">
                                <img class="img-fluid" src="../logo/icon_fra_2.webp" width="50px" alt="">
                                <br />
                                <span>Hoa đào</span>
                            </div>
                            <div class="col">
                                <img class="img-fluid" src="../logo/icon_fra_1.webp" width="50px" alt="">
                                <br />
                                <span>Trái cây</span>
                            </div>
                            <div class="col">
                                <img class="img-fluid" src="../logo/icon_fra_3.webp" width="50px" alt="">
                                <br />
                                <span>Xạ hương</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
     </div>
</div>

